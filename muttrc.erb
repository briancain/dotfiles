set imap_user = "<%= print("imap_user: "); STDOUT.flush; STDIN.gets.chomp %>"
set imap_pass = "<%= print("imap_pass: "); STDOUT.flush; STDIN.gets.chomp %>"

set smtp_url  = "<%= print("smtp_url: "); STDOUT.flush; STDIN.gets.chomp %>"
set smtp_pass = "<%= print("smtp_pass: "); STDOUT.flush; STDIN.gets.chomp %>"
set from      = "<%= print("email addr sent from: "); STDOUT.flush; STDIN.gets.chomp %>"
set realname  = "<%= print("real name: "); STDOUT.flush; STDIN.gets.chomp %>"

set folder    = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"

set header_cache      =~/.mutt/cache/headers
set message_cachedir  =~/.mutt/cache/bodies
set certificate_file  =~/.mutt/certificates

set move      = no
set editor    = 'vim'
set sort      = reverse-threads
set sort_aux  = last-date-received
set signature = '~/.mutt/signature'
source ~/.dotfiles/mutt-colors-solarized/mutt-colors-solarized-dark-256.muttrc

bind index G imap-fetch-mail
